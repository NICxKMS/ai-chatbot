{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "formatter": {
    "enabled": false
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off",

        /* Allow for Tailwind @ rules */
        "noUnknownAtRules": "off",

        /* Allowing console for debugging */
        "noConsole": "off",

        "noBitwiseOperators": "off",
        "noDocumentCookie": "off",
        "noTsIgnore": "off"
      },
      "style": {
        "noMagicNumbers": "off",
        "useConsistentObjectDefinitions": "off",
        "useCollapsedElseIf": "off",
        "noNestedTernary": "off",
        "useAtIndex": "off",
        "noParameterProperties": "off",

        "useReadonlyClassProperties": "off",
        "useConsistentBuiltinInstantiation": "off"
      },
      "nursery": {
        "useConsistentTypeDefinitions": "off",
        "noShadow": "off",
        "noUselessUndefined": "off",
        "noUnnecessaryConditions": "off",
        "useImageSize": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "useTopLevelRegex": "off",
        "noImgElement": "off",
        "noNamespaceImport": "off"
      },
      "complexity": {
        "noUselessEmptyExport": "off",
        "noExcessiveCognitiveComplexity": "off",
        "noUselessFragments": "off",
        "noBannedTypes": "off",
        "noStaticOnlyClass": "off",

        /* This one has false positives. It's a bit... iffy ðŸ˜‰ */
        "useSimplifiedLogicExpression": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedVariables": "off",
        "noUnusedFunctionParameters": "off",
        "noUnusedImports": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "a11y": {
        "useFocusableInteractive": "off",
        "noSvgWithoutTitle": "off",
        "useSemanticElements": "off"
      }
    }
  }
}
